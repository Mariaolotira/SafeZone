<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    android:backgroundTintMode="screen"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/btnreporthome"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="387dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="38dp"
        android:text="Report An Incident"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:icon="?android:attr/actionModeFindDrawable"
        app:iconSize="38dp"
        app:layout_constraintBottom_toTopOf="@+id/btnemergencycallhome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnemergencycallhome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="98dp"
        android:text="Emergency Call"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#F50505"
        android:textSize="36sp"
        android:textStyle="bold"
        app:icon="@android:drawable/ic_dialog_alert"
        app:iconPadding="10dp"
        app:iconSize="38dp"
        app:iconTint="#F70505"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnreporthome"
        app:strokeColor="#F10606" />

</androidx.constraintlayout.widget.ConstraintLayout>