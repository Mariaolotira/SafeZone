<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsafezone"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome_back_"
        android:layout_width="317dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|center"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="WELCOME BACK!"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textAppearance="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="77dp" />

    <EditText
        android:id="@+id/edtemaillogin"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox.Dense"
        android:layout_width="291dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView2"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:fadingEdge="none"
        android:hint="Enter Email"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="#F41313"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="329dp" />

    <EditText
        android:id="@+id/edtpasswordlogin"
        android:layout_width="291dp"
        android:layout_height="50dp"
        android:layout_below="@id/edtemaillogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHighlight="#EE0808"
        android:textColorHint="#F40404"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="413dp" />

    <Button
        android:id="@+id/btnloginlog"
        android:layout_width="300dp"
        android:layout_height="50dp"
        style="@style/Widget.AppCompat.Button"
        android:layout_below="@+id/edtpasswordlogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:text="LOGIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="529dp" />

    <Button
        android:id="@+id/btnregisterlog"
        android:layout_width="300dp"
        style="@style/Widget.AppCompat.Button"
        android:layout_height="50dp"
        android:layout_below="@+id/btnloginlog"
        android:layout_centerInParent="true"
        android:text="REGISTER"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="642dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_back_"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="160dp"
        android:background="@drawable/__img___loginimage" />

</RelativeLayout>